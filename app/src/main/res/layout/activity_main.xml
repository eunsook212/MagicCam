<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button Toast"/>


    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button Dialog"
        android:layout_toRightOf="@id/btn_toast"/>

    <Button
        android:id="@+id/btn_Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button Camera"
        android:layout_below="@id/btn_toast"/>

    <Button
        android:id="@+id/btn_Listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button ListView"
        android:layout_below="@id/btn_Camera"/>
</RelativeLayout>